<%= form_for(@user) do |f| %>

    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input" %><br><br>

    <%= f.label :first_name, class: "label" %>
    <%= f.text_field :first_name, class: "input" %><br><br>

    <%= f.label :last_name, class: "label" %>
    <%= f.text_field :last_name, class: "input" %><br><br>

    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %><br><br>

    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %><br><br>

    <%= f.submit "submit", :class => "button_submit sage" %>
    
<% end %>