<% if @market %>
    <%= render 'layouts/market_details' %>
<% else %>
    <h1>all antiques</h1>
<% end %>
<br>
<br>
<br>
<br>

<div class="grid_container">

    <% @antiques.each do |antique| %>
        <div class="antique_item">
            <h5><%= link_to "@#{antique.user.username}", user_path(antique.user_id) %></h5>
            <img><%= link_to image_tag(antique.antique_photo), antique_path(antique) %></img>
        </div>
    <% end %>

</div>
